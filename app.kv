                cols: 2
                padding: "10dp"
                MDLabel:
                    size_hint_y: .1
                    text: "local:"
                    halign: 'left'
                MDLabel:
                    size_hint_y: .1
                    id: "local:"
                    halign: 'center'
                MDLabel:
                    size_hint_y: .1
                    text: "network:"
                    halign: 'left'
                MDLabel:
                    size_hint_y: .1
                    text: "fjkdjfvjlfjnjff"
                    id: "network:"
                    halign: 'center'
            MDRelativeLayout:
                size_hint_x: 1
                MDFlatButton:
                    pos_hint:{"center_x": 0.5, "center_y": 0.3}
                    text: "run server"
                    md_bg_color: 1,0,1,1



<Parameters>:
    name: 'parameters'
    MDBoxLayout:
        orientation: 'vertical'
        pos_hint: {"center_x": .5, "top": 1}
        MDTopAppBar:
            title: 'Parameters'
            elevation: 10
            left_action_items: [["keyboard-backspace", lambda x: app.set_screen('pocket-api')]]
        ScrollView:
            MDList:
                id: parameters