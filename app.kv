<PocketApi>:
    name: 'pocket-api'
    MDBoxLayout:
        orientation: 'vertical'
        pos_hint: {"center_x": .5, "top": 1}
        size_hint_y: 0.5
        MDTopAppBar:
            title: 'Pocket api'
            elevation: 10
            right_action_items: [["cog", lambda x: app.set_screen('parameters')]]
        MDCard:
            orientation: "vertical"
            size_hint_y: 0.5
            pos_hint: {"center_x": .5, "center_y": .5}
            md_bg_color: 0,0,1,1
